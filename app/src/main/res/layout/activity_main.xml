                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Data Binding Lesson"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Data Binding Lesson"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Data Binding Lesson"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Data Binding Lesson"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Data Binding Lesson"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>
